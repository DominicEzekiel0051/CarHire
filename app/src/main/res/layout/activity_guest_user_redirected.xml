<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuestUserRedirected">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarTabBarStyle"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="375dp"
        android:layout_height="80dp"
        android:layout_alignEnd="@+id/toolbar"
        android:layout_alignRight="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="145dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:text="Login to your account or register if you are a guest user to make Reservation"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button4"
        android:layout_width="383dp"
        android:layout_height="61dp"
        android:layout_alignStart="@+id/toolbar"
        android:layout_alignLeft="@+id/toolbar"
        android:layout_alignEnd="@+id/toolbar"
        android:layout_alignRight="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="299dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:onClick="openLogin"
        android:text="LOGIN"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button18"
        android:layout_width="377dp"
        android:layout_height="58dp"
        android:layout_alignStart="@+id/toolbar"
        android:layout_alignLeft="@+id/toolbar"
        android:layout_alignEnd="@+id/toolbar"
        android:layout_alignRight="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="407dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:onClick="openCustomerSignUp"
        android:text="REGISTER"
        android:textSize="20sp" />


</RelativeLayout>